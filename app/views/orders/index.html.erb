<%= form_with  model: @order, id: 'charge-form', class: 'card-form',local: true do |f| %>
  <div class='form-wrap'>
    <%= f.label :price, "金額 数字のみ" %>
    <%= f.text_field :price, class:"price", placeholder:"例)2000（ローマ字や”＄”などはデータベース保存不可能）" %>
  </div>
  <%= f.submit "購入", class:"button", id: "button" %>
<% end %>